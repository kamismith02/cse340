<div class="container">
    <h1>Add New Vehicle to Inventory</h1>
    <% if (messages.length> 0) { %>
        <% messages.forEach(message=> { %>
            <div class="alert alert-<%= message.type %>">
                <%= message.text %>
            </div>
            <% }) %>
                <% } %>
                    <% if (errors.length> 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error=> { %>
                                <p>
                                    <%= error.msg %>
                                </p>
                                <% }) %>
                        </div>
                        <% } %>
                            <form id="addInventoryForm" action="/inventory/add" method="post">
                                <div class="form-group">
                                    <label for="make">Make:</label>
                                    <input type="text" id="make" name="make" value="<%= make ? make : '' %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="model">Model:</label>
                                    <input type="text" id="model" name="model" value="<%= model ? model : '' %>"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label for="year">Year:</label>
                                    <input type="number" id="year" name="year" min="1900" max="2099" step="1"
                                        value="<%= year ? year : '' %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="classification">Classification:</label>
                                    <%= classificationList %>
                                </div>
                                <div class="form-group">
                                    <label for="imagePath">Image Path:</label>
                                    <input type="text" id="imagePath" name="imagePath"
                                        value="<%= imagePath ? imagePath : '' %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="thumbnailPath">Thumbnail Path:</label>
                                    <input type="text" id="thumbnailPath" name="thumbnailPath"
                                        value="<%= thumbnailPath ? thumbnailPath : '' %>" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Vehicle</button>
                            </form>
</div>